<?xml version='1.0' encoding='utf-8'?>
<widget 

	id="edu.northwestern.dosa.nuhelp" 
	version="0.0.1" 
	android-versionCode="7"
	ios-CFBundleVersion="1.0.0"
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:cdv="http://cordova.apache.org/ns/1.0">
	
    <name>NUHelp</name>
    <description>
        NUHelp Northwestern University Helpful Services
    </description>
    <author email="sait-web1@northwestern.edu" href="http://www.northwestern.edu">
        Northwestern SAIT Application Development Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <platform name="ios">
        <!-- /cordova-lib/src/cordova/metadata/ios_parser.js -->
    	<!-- deployment target: 7, the lowest version to support! -->
    	<preference name="EnableViewportScale" value="true"/>
        <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
        <preference name="UIWebViewDecelerationSpeed" value="normal" />
    	<splash src="../cordova-assets/launch-images/ios/test.png" width="750" height="1334"/>
    	<splash src="../cordova-assets/launch-images/ios/test2.png" width="1242" height="2208"/>
    </platform>

    <platform name="android">
        <preference name="AndroidLaunchMode" value="singleTop"/>
    </platform>

    <preference name="DisallowOverscroll" value="true"/>
    <preference name="Orientation" value="portrait" />

    <!-- <access origin="sms:*" launch-external="yes" /> -->
    <!-- <access origin="geo:*" launch-external="yes" /> -->
    <access origin="*" launch-external="yes" />
</widget>